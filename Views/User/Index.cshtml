@model List<User>
<div class="my-4">
	<button type="button" class="btn btn-warning float-right">Create new user</button>
</div>

<table class="table table-dark table-hover">
	<thead>
		<th scope="col">Id</th>
		<th scope="col">Login</th>
		<th scope="col">Password</th>
		<th scope="col">Role</th>
		<th class="col-1"></th>
	</thead>
	<tbody>
		@foreach(var user in Model)
		{
			<tr>
				<td scope="row">@user.Id</td>
				<td>@user.Login</td>
				<td>@user.Password</td>
				<td>@user.Role.Roles</td>
				<td class="col-1">
					<div class="d-flex justify-content-end">
						<button type="button" class="btn btn-secondary mx-2">Details</button>
						<button type="button" class="btn btn-warning mx-2">Edit</button>
						<button type="button" class="btn btn-danger mx-2">Delete</button>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>
